{
  "source": "src",
  "destination": "build",
  "plugins": {
    "metalsmith-env": {},
    "metalsmith-markdown": true,
    "metalsmith-permalinks": {
      "relative": false,
      "linksets": [
        {
          "match": { "collection": "pages" },
          "pattern": ":route"
        }
      ]
    },
    "metalsmith-collections": {
      "projects": {
        "sortBy": "date",
        "reverse": true
      }
    },
    "metalsmith-register-helpers": {
      "directory": "src/helpers"
    },
    "metalsmith-layouts": {
      "engine": "handlebars"
    },
    "metalsmith-in-place": {
      "engine": "handlebars",
      "partials": "src/partials"
    },
    "metalsmith-postcss": {
      "plugins": {
        "autoprefixer": {},
        "postcss-nested": {},
        "postcss-color-gray": {},
        "postcss-custom-properties": {},
        "postcss-calc": {}
      },
      "map": true
    },
    "metalsmith-serve": {
      "port": 8888
    },
    "metalsmith-watch": {
      "livereload": true
    }
  }
}
